{
  "name": "tls-monitor",
  "version": "1.0.0",
  "description": "Monitor SSL/TLS certificates for your domains.",
  "main": "build/main.js",
  "repository": "git@github.com:zrosenbauer/tls-monitor.git",
  "author": "@zrosenbauer",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "package": "ncc build dist/main.js --source-map --license licenses.txt --out build",
    "biome": "biome",
    "analyze": "biome check",
    "analyze:ci": "biome ci",
    "analyze:types": "tsc --noEmit",
    "fix": "biome check --write ",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@slack/webhook": "^7.0.3",
    "gaxios": "^6.7.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/recommended": "^1.0.8",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "@vercel/ncc": "0.38.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "packageManager": "yarn@4.5.1"
}
